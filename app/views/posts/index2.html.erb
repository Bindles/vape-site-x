<script>
  options = {"hey": "you", "hello": "world"};
  arr = ["Man", "Girl", "Guy"];

  function getMsg() {
    let message = "";
    
    // Iterate through the arr array
    //arr.forEach(function(person) {
    arr.forEach(person => {
      // Append the reversed version of each person's name to the message
      message += person.split('').reverse().join('') + ' ';
    });

    // Display the message in the showMessage element
    document.getElementById("showMessage").innerHTML = message;
  }
</script>

<button id="showMsg" onclick="getMsg()">Show Msg</button>





